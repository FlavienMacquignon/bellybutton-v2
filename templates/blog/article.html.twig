{% extends 'base.html.twig' %}
{% block header %}
<a href="{{ path('home') }}">Notre offre</a>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="logo__login" href=""><i class="far fa-user-circle fa-4x "></i></a> 
    {% else %}
        <a class="btn btn--header" href="{{ path('app_login') }}">Inscription<br>connexion</a>
    {% endif %}
{% endblock %}
{% block title %}Blog{% endblock %}
{% block body %}
<div class="container">
    <div class="container__blog">
        <div class="main">
            <div class="article">   
                <h1> {{article.title}} </h1>
                <p class="article__author"><span>Tim pruski</span> <span>@timpruski</span> publi√© le {{article.createdAt |date("m/d/Y")}}</p>
                <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('full') }}" alt="">
                <p class="article__content"> {{article.body}} </p>
                {% for tag in article.tags %}
                    <a href="{{ path('blog_show_tag', {id: tag.id}) }}"><i class="fas fa-tags"></i>{{ tag.name }} </a>
                {% endfor %}
            </div> 

            {{ include('blog/_comment.html.twig') }}
        </div>
            {{ include('blog/_aside.html.twig') }}
{% endblock %}

