        <div class="aside">
            <h2>Les articles les plus consultés</h2>
            {% for article in recentArticle %}
            
            <a href="{{ path('blog_show', {id: article.id}) }}">
                <div class="aside__article">
                        <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('thumb') }}" alt="">
                    <div class="aside__article__content">
                        {% for tag in article.tags %}
                            <h3 class="aside__article__tag"> {{ tag.name }} </h3>
                        {% endfor %}
                        <p class="aside__article__p"> {{ article.title }} </p>
                    </div>
                </div>
            </a>
            {% endfor %}
            <div class="tag">
                <h2>Thèmes</h2>
             {% for tag in tags %}
             {% if tag.id == app.request.get('id') and app.request.attributes.get('_route') == "blog_show_tag" %}
                <a class="select" href="{{ path('blog_show_tag', {id: tag.id}) }}"> <i class="fas fa-tags"></i> {{ tag.name }} </a>
                {% else %}
                <a href="{{ path('blog_show_tag', {id: tag.id}) }}"> <i class="fas fa-tags"></i> {{ tag.name }} </a>
                {% endif %}
             {% endfor %}    
            </div>      
        </div>
    </div>
</div>


