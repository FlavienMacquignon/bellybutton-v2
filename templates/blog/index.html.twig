{% extends 'base.html.twig' %}
{% block header %}
<a href="{{ path('home') }}">Notre offre</a>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a class="logo__login" href=""><i class="far fa-user-circle fa-4x "></i></a> 
    {% else %}
        <a class="btn btn--header" href="{{ path('app_login') }}">Inscription<br>connexion</a>
    {% endif %}
{% endblock %}
{% block title %}Blog{% endblock %}
{% block body %}
<div class="container">
    <div class="container__blog">
        <div class="main">
            {{ include('blog/_last_article.html.twig') }}
            <h2 class="main__blog__title">Les derniers articles</h2>
            {{ include('blog/_articles.html.twig') }}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
