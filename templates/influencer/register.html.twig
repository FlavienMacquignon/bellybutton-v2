{% extends 'base.html.twig' %}
{% block header %}
    <a href="{{ path('business') }}">Vous êtes une entreprise ?</a>
    </div>
{{ include('base/_auth.html.twig') }}
{% endblock %}
{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container__register">
    

{{ include('base/_brand_business.html.twig') }}

    <div class="container container--register">
        <a href="{{ path('business_register') }}">Entreprise ? cliquer ici</a>
        <div class="register__form">
            <h1 class="register__form__title">Inscrivez-vous, on s'occupe du reste. </h1>
            <p class="register__form__text">C'est 100% gratuit, pas besoin de carte de crédit.</p>
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            <button class="btn btn--register">Créer un compte et recevoir des offres de partenariats</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}